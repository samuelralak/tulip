= render 'shared/navbar'
.container-fluid
  .row
    .col-sm-3.col-md-2.col-xs-1.sidebar
      = render 'shared/side_nav'

    .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
      .pull-right
        = link_to new_holiday_path, class: 'btn btn-info' do
          = fa_icon "plus", text: "New Holiday"
      %h1.page-header Holidays
      .table-responsive
        %table.table.table-striped
          %thead
            %tr
              %th Date
              %th Name
              %th Comments
              %th
              %th

          %tbody
            - @holidays.each do |holiday|
              %tr
                %td= holiday.try(:date)
                %td= holiday.try(:name)
                %td= holiday.try(:comments)
                %td= link_to 'Edit', edit_holiday_path(holiday)
                %td= link_to 'Destroy', holiday, :method => :delete, :data => { :confirm => 'Are you sure?' }


