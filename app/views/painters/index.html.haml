= render 'shared/navbar'
.container-fluid
  .row
    .col-sm-3.col-md-2.sidebar
      = render 'shared/side_nav'

    .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
      .pull-right
        = link_to new_painter_path, class: 'btn btn-info' do
          = fa_icon "plus", text: "New Painter"
      %h1.page-header Painters

      .table-responsive
        %table.table.table-striped
          %thead
            %tr
              %th Name
              %th Basic pay
              %th Daily wage
              %th Daily allowance
              %th Employment type
              %th Active
              %th
              %th
              %th

          %tbody
            - @painters.each do |painter|
              %tr
                %td= painter.try(:name)
                %td= painter.try(:basic_pay)
                %td= painter.try(:daily_wage)
                %td= painter.try(:daily_allowance)
                %td= painter.try(:employment_type).try(:name)
                %td= painter.try(:is_active)
                %td= link_to 'Show', painter
                %td= link_to 'Edit', edit_painter_path(painter)
                %td= link_to 'Destroy', painter, :method => :delete, :data => { :confirm => 'Are you sure?' }

      
