.row	
	.col-md-4
		%h3 Paints
		- paint_grand_total = 0
		- @paints.each do |p|
			.row
				.col-md-3
					= p.year
				.col-md-3
					= p.month
				.col-md-3
					= p.amount		
				.col-md-3
					- paint_grand_total+= p.amount						
					= p.amount
		.row
			.col-md-3
			.col-md-3
			.col-md-3
			.col-md-3
				= paint_grand_total
	.col-md-2
		%h3 Labour 
		- labour_grand_total = 0
		- @labours.each do |l|
			.row
				.col-md-8
					= l[0]
				.col-md-4
					- labour_total = 0
					- l[1].map { |w| labour_total+=(w.daily_wage + w.daily_allowance)}
					- labour_grand_total+= labour_total					
					= labour_total
		.row
			.col-md-8
			.col-md-4
				= labour_grand_total
	.col-md-6
		%h3 Materials
		- material_grand_total = 0
		- @materials.each do |m|
			.row
				.col-md-2
					= m.date
				.col-md-8
					= m.reason
				.col-md-2
					- material_grand_total+= m.total_spent						
					= m.total_spent
		.row
			.col-md-2
			.col-md-8
			.col-md-2
				= material_grand_total
%h2 Painters 
.row
