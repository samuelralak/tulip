			.col-md-4
			.col-md-4
			.col-md-4
				=invoice_total
	.col-md-6
		%h3 Payments
		- payment_total = 0
		- @payments.each do |p|
		.row
		-payment_total += p.amount
			.col-md-4
				= p.payment_date
			.col-md-4
				= p.reference
			.col-md-4	
				= p.amount 
		.row
			.col-md-4
			.col-md-4
			.col-md-4
				=payment_total
