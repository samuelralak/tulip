<div class="simple-calendar">
  <div class="text-center">
    <nav>
      <ul class="pager">
        <li class="previous"><%= link_to "Previous", start_date: date_range.first.beginning_of_month - 1.day  %></li>
        <li><%= I18n.t("date.month_names")[start_date.month] %> <%= start_date.year %></li>
        <li class="next"><%= link_to "Next", start_date: date_range.last.end_of_month + 1.day  %></li>
      </ul>
    </nav>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th></th>
        <th>Basic Pay</th>
        <th>Days Worked</th>
        <th>Holidays Worked</th>
        <th>Total Allowance</th>
        <th>Total Wages (Holidays)</th>
        <th>Deductions (IOU)</th>
        <th>Bonuses</th>
        <th>Payable</th>
      </tr>
    </thead>
    <tbody>
      <%- @painters.each do |painter| %>
        <tr>
          <td><%= painter.name %></td>
          <td><%= painter.basic_pay %></td>
          <td><%= days_worked(painter, @start_date) %></td>
          <td><%= holidays_worked(painter, @start_date) %></td>
          <td><%= allowance_total(painter, @start_date) %></td>
          <td><%= wages_total(painter, @start_date) %></td>
          <td><%= deductions_total(painter, @start_date) %></td>
          <td><%= bonus_total(painter, @start_date) %></td>
          <td><%= payable_total(painter, @start_date) %></td>
        </tr>

        <%- @total += payable_total(painter, @start_date) %>
      <% end -%>
      <tr>
          <td colspan="8" style="text-align:right"><strong>Total</strong> </td>
          <td><%= @total %></td>
        </tr>
    </tbody>
  </table>

