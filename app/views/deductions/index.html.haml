= render 'shared/navbar'
.container-fluid
  .row
    .col-sm-3.col-md-2.sidebar
      = render 'shared/side_nav'

    .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
      %h1.page-header Monthly Wages
      .row
        .col-md-3
          = render 'deductions/painters'
        .col-md-9 
          = link_to 'New Deduction', new_painter_deduction_path(@painter.id), class: 'btn btn-info pull-right', style: ""

          .table-responsive{ :style => "margin-top: 50px !important"}
            %table.table.table-striped
              %thead
                %tr
                  %th Date
                  %th Reason
                  %th Amount
                  %th
                  %th
                  %th

              %tbody
                - @deductions.each do |deduction|
                  %tr
                    %td= deduction.date
                    %td= deduction.reason
                    %td= deduction.amount
                    %td= link_to 'Show', deduction
                    %td= link_to 'Edit', edit_deduction_path(deduction)
                    %td= link_to 'Destroy', deduction, :method => :delete, :data => { :confirm => 'Are you sure?' }

            %br
