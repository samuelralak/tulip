%h1 Listing clients

%table
  %thead
    %tr
      %th Name
      %th Address
      %th City
      %th Mobile
      %th
      %th
      %th

  %tbody
    - @clients.each do |client|
      %tr
        %td= client.name
        %td= client.address
        %td= client.city
        %td= client.mobile
        %td= link_to 'Show', client
        %td= link_to 'Edit', edit_client_path(client)
        %td= link_to 'Destroy', client, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

