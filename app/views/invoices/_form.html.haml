.row
	.col-md-6
		= simple_form_for(@invoice) do |f|
			= f.error_notification

			.form-inputs
				= f.input :invoice_date, :as => :date_picker
				= f.input :note
				= f.input :amount
				= f.input :sub_total, input_html: { readonly: true }
				= f.input :value_added_tax, label: "V.A.T", input_html: { readonly: true }
				= f.input :total, input_html: { readonly: true }
				= f.association :site, collection: Site.all, include_blank: true, input_html: { class: 'chosen-select', id: "painterSkills" }

			.form-actions
				= f.button :submit
